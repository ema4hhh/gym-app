---
import gymStore from "../store/gymStore"



const { workout, currentExercise, restime } = gymStore.getState()
---

<footer class="text-slate-100 flex items-center justify-center gap-2">
    {workout === undefined 
        ? <></>
        : <>
            <h5>{workout.name}:</h5>
            <p>{currentExercise}</p>
            <p>Restime: {restime}</p>
        </>
    }
</footer>
